import java.util.Scanner;

public class BubbleProgram
{
  public static void main(String args[])
  {
    int n, i, j, temp;
    
    Scanner input = new Scanner(System.in);
    System.out.println("Enter the number of integers to sort");
    n = input.nextInt();
    int arr[] = new int[n];
 
    System.out.println("Enter " + n + " integers to sort ");
 
    for (i = 0; i < n; i++) 
      arr[i] = input.nextInt();
 
    for (i = 0; i < ( n - 1 ); i++) 
    {
      for (j = 0; j < n - i - 1; j++) 
      {
        if (arr[j] > arr[j+1]) 
        {
           temp = arr[j];       //temp contains larger number
           arr{j] = arr[j+1];   // the first position will now contain the smaller number 
           arr[j+1] = temp;     // the second position will now contain the larger number 
        }
      }
    }
 
    System.out.println("Sorted list of integers :- ");
 
    for (i = 0; i < n; i++) 
    {
      System.out.println(arr[i]);
  }
  }
}
